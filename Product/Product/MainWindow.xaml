<Window x:Class="WpfProductApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Manager" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Product Name:" />
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10" />
            <Label Content="Product Price:" />
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10" />
            <Label Content="Product Quantity:" />
            <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10" />
            <Button Content="Add Product" Click="AddProduct_Click" Margin="0,0,0,10" />
            <ListBox x:Name="ProductListBox" SelectionChanged="ProductListBox_SelectionChanged" Margin="0,0,0,10" />
            <Button Content="Show Selected Product" Click="ShowSelectedProduct_Click" />
        </StackPanel>
    </Grid>
</Window>